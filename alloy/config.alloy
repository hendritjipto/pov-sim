// ============================================
// FARO - Frontend Observability
// ============================================

faro.receiver "frontend" {
    // https://grafana.com/docs/alloy/latest/reference/components/faro.receiver/
    server {
        listen_address = "0.0.0.0"
        listen_port = 12347
        
        cors_allowed_origins = ["*"]
    }

    output {
        logs   = [loki.process.faro.receiver]
        traces = [otelcol.processor.attributes.faro_frontend.input]
    }
}

// Process Faro logs to add proper labels
loki.process "faro" {
    stage.static_labels {
        values = {
            service_name = "pov-sim-frontend",
            app = "pov-sim-frontend",
        }
    }
    
    forward_to = [loki.write.grafana_cloud.receiver]
}

// Add service.name attribute to Faro traces
otelcol.processor.attributes "faro_frontend" {
    action {
        key = "service.name"
        value = "pov-sim-frontend"
        action = "upsert"
    }
    
    output {
        traces = [otelcol.processor.batch.default.input]
    }
}

livedebugging {
  enabled = true
}